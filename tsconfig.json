{
  "compilerOptions": {
    "module": "commonjs",
    "target": "esnext",
    "allowJs": false,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["esnext"],
    "outDir": "dist"
  },
  "include": [
    "src/**/*"
  ],
  "compileOnSave": true,
  "exclude": [
    "node_modules",
    "dist",
    "dashboard-vue",
    "dashboard",
    "static",
    "views",
    "db"
  ]
}